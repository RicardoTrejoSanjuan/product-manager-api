{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "module": "ESNext", // Para generar módulos ES
        "moduleResolution": "node", // Para resolver módulos de la manera en que Node lo hace
        "target": "ES2020", // O cualquier versión moderna de ES
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  